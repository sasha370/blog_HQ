<h1 class="text-center mt-4">Создать новую категорию </h1>
<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :name, "Название категории", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Введите название" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

  </div>
  <div class="row justify-content-center">
    <div class="text-center mb-3">
      <%= link_to '[Вернуться назад]', categories_path, class: "text-info" %>
    </div>
  </div>
</div>

