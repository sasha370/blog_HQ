<h1 class="text-center mt-4"> Вход в учетную запись </h1>

<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
           <%= form_with(scope: :session, url:  login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :email, class: "form-control shadow rounded", placeholder: "E-mail" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Введите пароль" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit  "Войти", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

  </div>
  <div class="row justify-content-center">
    <div class="text-center mb-3">
      <%= link_to '[Вернуться назад]', users_path, class: "text-info" %>
    </div>
  </div>
</div>
