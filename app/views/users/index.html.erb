<h1 class="text-center mt-4">Список пользователей</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>


<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4 ">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150) %>
            </h5>
            <p class="card-text"><%= user.articles.count %> статей</p>
            <%= link_to 'Show', user, class: "btn btn-outline-success" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-info" %>
          </div>
          <div class="card-footer text-muted">
            <small>Зарегистрирован <%= time_ago_in_words(user.created_at) %>,
              отредактированно <%= time_ago_in_words(user.updated_at) %></small>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>

